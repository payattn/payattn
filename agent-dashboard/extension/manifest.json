{
  "manifest_version": 3,
  "name": "PayAttn",
  "version": "1.0.0",
  "description": "Privacy-first ad agent that runs autonomously in the background",
  "key": "",
  "permissions": [
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*.payattn.org/*",
    "https://api.venice.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:3000/*",
        "https://*.payattn.org/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*",
      "https://*.payattn.org/*"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["ad-queue.html", "ad-queue.js", "venice-test.html", "settings.html", "prompt-lab.html", "venice-ai.js", "settings.js", "venice-test.js", "prompt-lab.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
