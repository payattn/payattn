# Cloudflare Worker Configuration Template
# Copy this to wrangler.toml and fill in your details

# DO NOT COMMIT wrangler.toml to Git! It's in .gitignore for security.

name = "payattn-zk-verifier"
main = "worker.js"
compatibility_date = "2024-11-06"

# Get your account_id from: https://dash.cloudflare.com/
# Look in the URL or Account Settings
account_id = "YOUR_ACCOUNT_ID_HERE"

# Worker configuration
workers_dev = true
route = ""
zone_id = ""

# Resource limits (adjust based on your plan)
[env.production]
name = "payattn-zk-verifier"

# Environment variables (non-sensitive)
[vars]
ENVIRONMENT = "production"

# For secrets (sensitive data), use:
# wrangler secret put SECRET_NAME
# Never put secrets in this file!

# Example secrets to set:
# wrangler secret put API_KEY
# wrangler secret put AUTH_TOKEN
